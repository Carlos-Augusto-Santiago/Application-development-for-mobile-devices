<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sensores"
        android:textSize="32dp"
        android:textColor="@color/teal_200"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="TEMPERATURA"
        android:textSize="20sp"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="La temperatura de un \nobjeto, a distancia vía \nun sensor infrarrojo"
        android:textSize="12sp"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:id="@+id/temperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="45dp"
        android:layout_marginTop="-30dp"
        android:textSize="10sp"
        android:layout_gravity="right"
        android:text="35.00 humedad 25.30 temp"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="VOLTAJE"
        android:textSize="20sp"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="El voltaje de la escobilla de un \npotenciómetro"
        android:textSize="12sp"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:id="@+id/voltaje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="45dp"
        android:layout_marginTop="-33dp"
        android:textSize="10sp"
        android:layout_gravity="right"
        android:text="0.01 volts"
        android:padding="10dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="CAPACITANCIA"
        android:textSize="20sp"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="La capacitancia de un \ncapacitor del orden menor \nque 0.1µF"
        android:textSize="12sp"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:id="@+id/capacitancia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="45dp"
        android:layout_marginTop="-36dp"
        android:textSize="10sp"
        android:layout_gravity="right"
        android:text="10 microFarads"
        android:padding="10dp"/>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="REVOLUCIONES \nPOR MINUTO"
        android:textSize="20sp"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Las revoluciones por \nminuto RPMs de una \nhélice de dos palas"
        android:textSize="12sp"
        android:layout_marginLeft="40dp"/>
    <TextView
        android:id="@+id/rpm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="45dp"
        android:layout_marginTop="-30dp"
        android:textSize="10sp"
        android:text="35 revoluciones por minuto"
        android:layout_gravity="right"
        android:padding="10dp"/>

    <Button
        android:id="@+id/home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="HOME"
        android:textSize="15sp"
        android:padding="15dp"/>

</LinearLayout>